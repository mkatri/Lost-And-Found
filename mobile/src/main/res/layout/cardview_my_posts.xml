<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/objectImage"
            android:layout_width="@dimen/cardview_image_size"
            android:layout_height="@dimen/cardview_image_size"
            android:layout_margin="@dimen/cardview_image_margin"
            android:scaleType="centerCrop"
            android:clickable="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/objectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                style="@android:style/TextAppearance.Material.DialogWindowTitle" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cardview_text_margin"
                    android:layout_marginEnd="@dimen/cardview_text_margin"
                    android:textColor="@android:color/holo_green_dark"
                    style="@android:style/TextAppearance.Material.Caption"/>
                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cardview_text_margin"
                    android:layout_marginEnd="@dimen/cardview_text_margin"
                    style="@android:style/TextAppearance.Material.Caption"/>
            </LinearLayout>
            <Button
                android:id="@+id/searchBtn"
                android:layout_width="@dimen/cardview_options_ic_size"
                android:layout_height="@dimen/cardview_options_ic_size"
                android:background="@drawable/ic_search_black_24dp"
                android:layout_gravity="bottom|end"/>
        </LinearLayout>
    </LinearLayout>



</android.support.v7.widget.CardView>

